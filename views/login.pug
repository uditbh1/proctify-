doctype html
head
  title Login
  link(rel='shortcut icon' href='TESTIFY.png')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(rel='stylesheet' type='text/css' href='/style.css')
  link(href='https://fonts.googleapis.com/css?family=Poppins:600&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css')
  script(src='https://kit.fontawesome.com/a81368914c.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js')
  script(src='//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js')
  meta(name='viewport' content='width=device-width, initial-scale=1')
// Header
header.header
  a.logo(href='/')
    i.fas.fa-paper-plane
    | Proctify
  a.bttn(href='/signup') Signup
// Container
.container
  // Left side
  .left-side
    .img-area
      .img
        img(src='/login.jpg')
  // Right side
  .login-content
    form(action='/api/v1/user/login' data-route="login")
      img(src='/avatar.png')
      h2.title Welcome
      .input-div.one
        .i
          i.fas.fa-user
        .div
          h5 Email
          input.input(name="email" type='email')
      .input-div.pass
        .i
          i.fas.fa-lock
        .div
          h5 Password
          input.input(name="pass" type='password')
      input.btn(type='submit' value='Login')
script(type='text/javascript' src='/auth.js')
